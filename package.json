{
    "name": "sidecar",
    "version": "1.0.0",
    "description": "ECO Union Solution Sidecar",
    "repository": "https://github.com/ccphantom/sidecar.git",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "@sap/xsenv": "^3.1.1",
        "@sap/xssec": "^3.2.7",
        "express": "^4",
        "hdb": "^0.18.3"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.90.10",
        "sqlite3": "^5.0.2"
    },
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "start": "cds run",
        "watch-unions": "cds watch --open unions/webapp/index.html#fe-lrop-v4"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "sapux": [
        "app/unions"
    ],
    "cds": {
        "requires": {
            "db": {
                "kind": "sql"
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    }
}
